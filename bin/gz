#!/usr/bin/env bash

# Compares original and gzipped file sizes.
#
# - Compare sizes:
#
# `gz {{file}}`
#
# ---
# Author: Artem Sapegin, sapegin.me
# License: MIT
# https://github.com/sapegin/dotfiles

# Common stuff
RED="$(tput setaf 1)"
CYAN="$(tput setaf 6)"
UNDERLINE="$(tput sgr 0 1)"
NOCOLOR="$(tput sgr0)"
function error() { echo -e "$UNDERLINE$RED$1$NOCOLOR\n"; }

function usage() {
	echo "Usage:"
	echo "  $(basename $0) <file>"
	echo
}

root="$(dirname $(dirname $0))"

# Empty arguments
if [ -z "$1" ]; then
	usage
	exit 1
fi

origsize=$(wc -c < "$1")
gzipsize=$(gzip -c "$1" | wc -c)
ratio=$(echo "$gzipsize * 100/ $origsize" | bc -l)
printf "Original: $CYAN%s$NOCOLOR\n" "$(pretty-bytes $origsize)"
printf "Gzipped:  $CYAN%s$NOCOLOR (%2.2f%%)\n" "$(pretty-bytes $gzipsize)" "$ratio"
