brew "git-delta" # Diff pager for `git` and `grep` output
brew "lazygit" # Git client
brew "macos-trash" # `rm` replacement with MacOS trash support
brew "node" # Fallback Node.js version
brew "ripgrep" # `grep` replacement
brew "rsyncy" # `rsync` replacement
brew "starship" # Prompt manager
brew "tlrc" # `man` replacement
brew "typos-cli" # Fix typos
brew "zsh" # Shell
brew "zsh-syntax-highlighting" # Syntax highlighting for zsh

