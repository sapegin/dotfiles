{
  "name": "dotfiles",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "eslint . --cache --fix",
    "test": "npm run lint",
    "posttest": "npm run format",
    "format": "prettier --log-level warn --ignore-unknown --write \"**/*.{js,cjs,md,json,sh}\" \"bin/*\""
  },
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
