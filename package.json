    "avif": "^0.5.3",
    "glob": "^11.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "shiki": "^3.12.2",
    "unified": "^11.0.5"
  },
  "devDependencies": {
    "eslint": "^9.38.0",
    "eslint-config-tamia": "^9.6.2",
    "prettier": "^3.6.2",
    "prettier-plugin-sh": "^0.18.0"
  }
}
